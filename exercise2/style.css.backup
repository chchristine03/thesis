html, body {
  margin: 0;
  background:#000;
  color:#000000;
  font: 16px/1.6 system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif;
  height: 100%;
}

/* Heartbeat glow overlay - Make it more visible and ensure it's on top */
#heartbeat-glow {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  pointer-events: none;
  /* Start with very low values */
  --pulse-alpha: 0.05;  /* Almost invisible */
  --pulse-size: 20%;    /* Small size */
  --pulse-blur: 80px;   /* High blur */

  /* Red radial glow - make it more visible */
  background:
    radial-gradient(circle at 50% 50%,
      rgba(255,0,0,var(--pulse-alpha)) 0%,
      rgba(255,0,0,calc(var(--pulse-alpha) * 0.8)) 20%,
      rgba(255,0,0,calc(var(--pulse-alpha) * 0.6)) 40%,
      rgba(255,0,0,calc(var(--pulse-alpha) * 0.4)) 60%,
      rgba(255,0,0,calc(var(--pulse-alpha) * 0.2)) 80%,
      rgba(255,0,0,0) var(--pulse-size)
    );
  filter: blur(var(--pulse-blur));
  transition: background 100ms ease-out, filter 100ms ease-out;
  z-index: 9999; /* Much higher z-index to ensure it's on top */
}

/* Respect reduced motion */
@media (prefers-reduced-motion: reduce){
  #heartbeat-glow { display:none; }
}

/* Story sections - FIXED: Remove overflow hidden for sticky to work */
.story-section {
  height: 700vh; /* 12 viewport heights - requires 12 full scrolls to get through */
  width: 100vw;  /* Full viewport width */
  padding: 0;
  margin: 0;
  position: relative;
  z-index: 0; /* Lower z-index than glow */
  display: flex;
  flex-direction: column; /* Stack content vertically */
  align-items: center;
  justify-content: flex-start; /* Start from top */
}

#intro-story {
  background: #000; /* Pure black */
}

/* First story section - Completely black */
#first-story {
  background: #000; /* Pure black */
  height: 1000vh; /* 12 viewport heights - requires 12 full scrolls to get through */
}

/* Second story section - Completely black */
#second-story {
  background-image: linear-gradient(rgb(108, 0, 0),rgba(0, 0, 0, 0));
}

/* Title styling - Start in middle, then stick to top */
.title {
  position: sticky;
  top: 10vh; /* Stick to very top of viewport when scrolling */
  left: 50%;
  transform: translateX(-50%); /* Center horizontally */
  font-size: 2.5rem;
  font-weight: 300;
  text-align: center;
  z-index: 30; /* Higher than sections but lower than glow */
  color: #ece29f;
  opacity: 0.9;
  margin: 0;
  padding: 20px;
  font-family: "allotropic", sans-serif;
  font-weight: 300;
  font-style: normal;  
  /* Make sure it doesn't interfere with other elements */
  pointer-events: none;

  /* Start positioned in the middle of the first section */
  margin-top: 50vh; /* Push it down to start in middle of viewport */
}
.sub-title {
  position: sticky;
  top: 10vh; /* Stick to very top of viewport when scrolling */
  left: 50%;
  transform: translateX(-50%); /* Center horizontally */
  font-size: 2.5rem;
  font-weight: 300;
  text-align: center;
  z-index: 30; /* Higher than sections but lower than glow */
  color: #f47070;
  opacity: 0.5;
  margin: 0;
  padding: 20px;
  font-family: "allotropic", sans-serif;
  font-weight: 300;
  font-style: normal;  
  /* Make sure it doesn't interfere with other elements */
  pointer-events: none;

  /* Start positioned in the middle of the first section */
  margin-top: 50vh; /* Push it down to start in middle of viewport */
}

/* Title styling - Start in middle, then stick to top */
.bottom-title {
