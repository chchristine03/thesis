/* Your content container */
.text{
  max-width: 60ch;
  padding: 24px;
  position: relative;
  z-index: 2; /* Lower than glow */
  line-height: 1.8;
  max-height: 80vh; /* Limit height so content fits in viewport */
  overflow-y: auto; /* Allow scrolling within the section if content is too long */
}

/* Add some spacing between sections */
.text br + br {
  margin: 2em 0;
}

/* Image gallery styling */
.image-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 1rem;
  margin: 2rem 0;
}

.image-gallery p {
  background: rgba(255,0,0,0.1);
  padding: 2rem;
  text-align: center;
  border: 1px solid rgba(255,0,0,0.3);
  border-radius: 8px;
}

/* Section headers */
h2 {
  color: #ff4444;
  font-size: 2rem;
  margin-bottom: 1rem;
  text-align: center;
}

/* Smooth scrolling between sections */
html {
  scroll-behavior: smooth;
}

/* ===== CLOCK SECTION ===== */
.clock-section {
  background: radial-gradient(circle, #ff000000 0%, #83000038 30%, #7c0000 70%, #860000 100%);
  width: 100vw; 
  color: #000;
  height: 2400vh; /* Much longer - 24 viewport heights for all 12 images */
  padding: 2rem 0;
  position: relative;
  z-index: 5;
  overflow: visible; /* Allow scrolling */
}

.clock-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  position: relative;
  height: 100vh; /* Fixed height for the clock itself */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: sticky; /* Make clock sticky */
  top: 0; /* Stick to top of viewport */
}

/* Canvas Clock - Simplified, no shadows or borders */
#clockCanvas {
  background: transparent; /* No background */
  z-index: 20;
}

/* Main Clock Images (1-12) */
.image-overlay {
  position: absolute;
  width: 100px; /* Much bigger - increased from 80px */
  height: 100px; /* Much bigger - increased from 80px */
  background: linear-gradient(135deg, #8652ff00 0%rgba(169, 85, 247, 0)F7 100%);
  transform: translate(-50%, -50%);
  opacity: 0;
  transition: opacity 0.3s ease;
  z-index: 5; /* Higher z-index to be on top of canvas numbers */
  display: flex;
  justify-content: center;
  align-items: center;
}

.image-overlay.active {
  opacity: 1;
}

/* Additional Images Around Page (13-24) - Randomly placed across entire page */
.additional-image {
  position: fixed; /* Fixed positioning to place anywhere on page */
  width: 100px; /* Smaller than main images */
  height: 100px;
  background: linear-gradient(135deg, #ff6b6b00 0%, #ff8e8e00 100%); /* Different color - red/pink */
  transform: translate(-50%, -50%);
  opacity: 0.5;
  transition: opacity 0.2s ease; /* Faster transition */
  z-index: 8; /* Below main images but above background */
  display: flex;
  justify-content: center;
  align-items: center;
}

.additional-image.active {
  opacity: 0.5;
}

.image-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  font-size: 1rem; /* Smaller font for additional images */
  font-weight: bold;
  text-align: center;
}

