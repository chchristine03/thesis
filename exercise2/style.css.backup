.image-overlay[data-number="11"] { top: calc(50% - 200px); left: calc(50% - 100px); } /* 11 o'clock */

/* Mobile adjustments - restore original */
@media (max-width: 768px) {
  .image-overlay[data-number="12"] { top: calc(50% - 130px); left: 50%; } /* 12 o'clock mobile */
  .image-overlay[data-number="1"] { top: calc(50% - 110px); left: calc(50% + 60px); } /* 1 o'clock mobile */
  .image-overlay[data-number="2"] { top: calc(50% - 65px); left: calc(50% + 130px); } /* 2 o'clock mobile */
  .image-overlay[data-number="3"] { top: 50%; left: calc(50% + 130px); } /* 3 o'clock mobile */
  .image-overlay[data-number="4"] { top: calc(50% + 65px); left: calc(50% + 130px); } /* 4 o'clock mobile */
  .image-overlay[data-number="5"] { top: calc(50% + 110px); left: calc(50% + 60px); } /* 5 o'clock mobile */
  .image-overlay[data-number="6"] { top: calc(50% + 130px); left: 50%; } /* 6 o'clock mobile */
  .image-overlay[data-number="7"] { top: calc(50% + 110px); left: calc(50% - 60px); } /* 7 o'clock mobile */
  .image-overlay[data-number="8"] { top: calc(50% + 65px); left: calc(50% - 130px); } /* 8 o'clock mobile */
  .image-overlay[data-number="9"] { top: 50%; left: calc(50% - 130px); } /* 9 o'clock mobile */
  .image-overlay[data-number="10"] { top: calc(50% - 65px); left: calc(50% - 130px); } /* 10 o'clock mobile */
  .image-overlay[data-number="11"] { top: calc(50% - 110px); left: calc(50% - 60px); } /* 11 o'clock mobile */
}

/* Make additional images disappear more smoothly */
.additional-image {
  opacity: 0;
  transition: opacity 2s ease-in-out; /* Slower, smoother transition */
  transform: translate(-50%, -50%) scale(1);
  transition: opacity 2s ease-in-out, transform 2s ease-in-out; /* Add scale transition */
}

.additional-image.active {
  opacity: 1;
  transform: translate(-50%, -50%) scale(1);
}

/* Add a fade-out effect when removing active class */
.additional-image:not(.active) {
  opacity: 0;
  transform: translate(-50%, -50%) scale(1.5); /* Slight scale down when fading out */
  transition: opacity 2s ease-out, transform 2s ease-out; /* Longer fade-out */
}

